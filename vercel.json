{
  "version": 2,
  "buildCommand": "cd AutoSales/frontend && npm ci && npm run build && cd ../backend && npm ci && npm run build && npx prisma generate",
  "installCommand": "cd AutoSales/frontend && npm ci && cd ../backend && npm ci",
  "outputDirectory": "AutoSales/frontend/dist",
  "framework": "vite",
  "builds": [
    {
      "src": "AutoSales/backend/api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "AutoSales/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/AutoSales/backend/api/health.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/AutoSales/backend/api/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|json))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "postgresql://postgres.fbhsysehqmgvlykzqaug:uHQZcPEOBpTb9j9t@aws-1-sa-east-1.pooler.supabase.com:6543/postgres",
    "DIRECT_URL": "postgresql://postgres:uHQZcPEOBpTb9j9t@db.fbhsysehqmgvlykzqaug.supabase.co:5432/postgres",
    "JWT_SECRET": "tu-jwt-secret-super-seguro-aqui-cambiar-en-produccion",
    "JWT_EXPIRES_IN": "7d",
    "NETWORK_MODE": "ipv6",
    "CORS_ORIGIN": "https://autosales-ckevpbf3b-felipeandreaus-projects.vercel.app",
    "PRISMA_DISABLE_PREPARED_STATEMENTS": "true"
  }
}