# ================================
# CONFIGURACIÓN DE LA API
# ================================

# URL base de la API del backend
# Para Docker: usar nombre del servicio
VITE_API_BASE_URL=http://localhost:3000

# URL de la API para producción
VITE_API_PROD_URL=https://utn-ds25-grupo-7-apej.onrender.com/api

# ================================
# CONFIGURACIÓN DEL ENTORNO
# ================================

# Entorno de la aplicación (development, production, test)
VITE_NODE_ENV=production

# Habilitar modo de desarrollo
VITE_DEV_MODE=false

# ================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ================================

# Nombre de la aplicación
VITE_APP_NAME=AutoSales

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Título de la aplicación
VITE_APP_TITLE=AutoSales - Sistema de Gestión Vehicular

# ================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ================================

# Tiempo de expiración del token en localStorage (en días)
VITE_TOKEN_EXPIRATION_DAYS=7

# Clave para localStorage
VITE_STORAGE_KEY=autosales_token

# ================================
# CONFIGURACIÓN DE UI
# ================================

# Tema por defecto (light, dark, auto)
VITE_DEFAULT_THEME=light

# Idioma por defecto
VITE_DEFAULT_LANGUAGE=es

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================

# Habilitar logs en consola
VITE_ENABLE_CONSOLE_LOGS=false

# Habilitar DevTools
VITE_ENABLE_DEVTOOLS=false

# Puerto de desarrollo (para referencia)
VITE_DEV_PORT=5173

# ================================
# CONFIGURACIÓN DE DOCKER
# ================================

# Nombre del contenedor
VITE_CONTAINER_NAME=autosales-frontend

# Red de Docker
VITE_DOCKER_NETWORK=autosales-network